{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "./dist/",
    "target": "ES2019",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@_types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@constants/*": ["./src/constants/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
